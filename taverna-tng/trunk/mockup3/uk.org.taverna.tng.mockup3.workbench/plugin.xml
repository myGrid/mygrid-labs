<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="uk.org.taverna.tng.mockup3.workbench.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="uk.org.taverna.tng.mockup3.workbench.Perspective"
            id="uk.org.taverna.tng.mockup3.workbench.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="uk.org.taverna.tng.mockup3.workbench.views.Canvas"
            id="uk.org.taverna.tng.mockup3.workbench.views.Canvas"
            name="Canvas">
      </view>
      <view
            allowMultiple="true"
            class="uk.org.taverna.tng.mockup3.workbench.views.ComponentPalette"
            id="uk.org.taverna.tng.mockup3.workbench.views.ComponentPalette"
            name="ComponentPalette"
            restorable="true">
      </view>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.org.taverna.tng.mockup3.workbench.application"
            name="Taverna Next Gen Workbench Mockup3">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="uk.org.taverna.tng.mockup3.workbench.views.ComponentPalette"
               minimized="false"
               moveable="false"
               ratio="0.25f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
